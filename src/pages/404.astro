---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
  <main class="container mx-auto px-4 py-16 text-center">
    <h1 class="text-4xl font-bold mb-4">404 - Page Not Found</h1>
    <p class="text-xl mb-8">The page you're looking for doesn't exist or has been moved.</p>
    <a href="/" class="inline-block bg-primary-500 hover:bg-primary-600 text-white font-bold py-2 px-4 rounded transition-colors">
      Return to Home
    </a>
  </main>
</Layout>
